/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
}
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
/*顶部样式*/
.top{
  width: 100%;
  height: 12.5%;
  position: relative;
  z-index: 99;
  border-bottom: #F7F7F7;
  box-shadow: 0 -5px 10px;
  padding: 10rpx 36rpx 10rpx;
  box-sizing: border-box;
}
.store{
  width: 100%;
  height: 64%;
}
.addr{
  font-size: 38rpx;
  font-weight: bolder;
  float: left;
}
.type{
  width: 190rpx;
  height: 60rpx;
  border-radius: 50rpx 50rpx;
  background-color: #F6F6F6;
  float: right;
  font-size: 25rpx;
  text-align: center;
  color: #B2B2B2;
  padding: 7rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}
.self{
  float: left;
  width: 50%;
  height: 100%;
}
.send{
  float: right;
  width: 50%;
  height: 100%;
}
.type-active{
  background-color: #333333;
  color: #FFFFFF;
  font-size: 30rpx;
  border-radius: 35rpx 35rpx;
}
.info{
  width: 100%;
  height: 36%;
  vertical-align: bottom;
}
.distance{
  color: #AFAFAF;
  font-size: 30rpx;
  float: left;
}
.moreInfo{
  font-size: 23rpx;
  color: #AFAFAF;
  margin-top: 5rpx;
  float: right;
}
.content{
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 87.5%;
}
/*菜单样式*/
.menu{
  position: relative;
  height:100%;
  width:23%;
  float:left;
  box-sizing: border-box;
  background-color: #F6F6F6;
}
.menu-scroll{
  width: 100%;
  height: 100%;
}
.scroll-view-items{
  width: 100%;
  color: #AFAFAF;
  background-color: #F6F6F6;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 25rpx;
}
.item-active{
  color: #434343;
  font-weight: bold;
  border-left: 10rpx solid #D7A875;
  background-color: #FFFFFF;
  padding-left: 15rpx;
}
/*菜品栏样式*/
.productList{
  position: relative;
  height:100%;
  width:77%;
  float:right; 
  background-color: #FFFFFF;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.prod-scroll{
  width: 100%;
  height: 100%;
}
.show-img{
  width: 100%;
  height: 300rpx;
  margin-bottom: 7rpx;
}
image{
  width: 100%;
  height: 100%;
}
.prod-scroll-item{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #AFAFAF;
  padding-right: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
/*菜品*/
.prod{
  width: 100%;
  height: 230rpx;
  margin: 40rpx 0;
  box-sizing: border-box;
}
.prod-img{
  width: 30%;
  height: 100%;
  padding: 45rpx 20rpx;
  box-sizing: border-box;
  float: left;
}
.prod-info{
  float: right;
  width: 70%;
  height: 100%;
}
.prod-top{
  height: 70%;
}
.prod-name{
  font-size: 33rpx;
  color: #424242;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.prod-tag{
  float: left;
  width: auto;
  height: 20rpx;
  margin-bottom: 10rpx;
  background-color: #F6F6F6;
  color: #DDDDDD;
  font-size: 25rpx;
  padding: 10rpx;
}
.prod-content{
  font-size: 25rpx;
  display: -webkit-box;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.prod-bottom{
  height: 30%;
}
.price{
  color: #424242;
  font-size: 40rpx;
  font-weight: bold;
  float: left;
}
.buy-btn{
  background-color: #D7A875;
  float: right;
  width: 100rpx;
  height: 50rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50rpx;
  margin-top: 5rpx;
}
