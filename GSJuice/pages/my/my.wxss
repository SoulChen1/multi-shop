/* pages/my/my.wxss */
page{
  width: 100%;
  height: 100%;

}
.container{
  width: 100%;
  height: 100%;
}
.top-image{
  width: 100%;
  height: 30%;
  margin-bottom: 35rpx;
}
image{
  width: 100%;
  height: 100%;
}
.my-info{
  width: 90%;
  height: 20%;
  box-shadow: 0px 0px 20rpx #ADADAD;
  margin: 0 auto;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
}
.my-headImg{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 3%;
  top: -15%;
}
.my-headImg image{
  border-radius: 50%;
}
.my-name{
  display: inline-block;
  width: auto;
  font-size: 45rpx;
  font-weight: bolder;
}
.nickname{
  display: inline-block;
  margin-left: 30rpx;
  font-size: 60rpx;
  font-weight: bolder;
  color: #D6A874;
}
.hr{
  width: 90%;
  border: 1rpx solid rgb(212, 210, 210);
  position: absolute;
  top: 45%;
  margin: auto;
}

